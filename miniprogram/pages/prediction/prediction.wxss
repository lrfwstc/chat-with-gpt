/* prediction.wxss */

.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 20px;
  }
  
  .userinfo,
  .current-time {
	width: 100%;
	text-align: center;
	margin-bottom: 20px;
  }
  
  .input-area {
	width: 100%;
  }
  
  .input-area text {
	display: block;
	width: 100%;
	text-align: center;
	margin-bottom: 10px;
  }
  
  .input-area input {
	display: block;
	width: 100%;
	margin-bottom: 20px;
  }
  
  .input-area button {
	display: block;
	margin: auto;
  }
  